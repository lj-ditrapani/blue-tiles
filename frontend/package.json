{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.54",
    "@types/react": "^16.9.45",
    "@types/react-dom": "^16.9.8",
    "fontsource-roboto": "^3.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.3",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "tsc": "tsc",
    "test": "react-scripts test",
    "test-only": "npm test -- --watchAll=false",
    "test-coverage": "npm test -- --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "fmt": "prettier --write \"*.json\" \"src/**/*.{ts,tsx}\"",
    "fmt-check": "prettier --check \"*.json\" \"src/**/*.{ts,tsx}\"",
    "copy-to-backend": "rm -fr ../backend/src/main/resources/webroot/* && cp -R build/* ../backend/src/main/resources/webroot",
    "build-and-copy": "npm run build && npm run copy-to-backend"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5"
  }
}
